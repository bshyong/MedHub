 <% flash.each do |key, msg| %>
    <%= content_tag :div, msg, :class => "#{key}_message", :id => "notice_#{key}" %>
    <%= content_tag :script, :type => "text/javascript" do -%>
        setTimeout("new Effect.Fade('notice_<%= key %>');", 6000);
      // setTimeout("$('#notice_<%= key %>').fadeOut(800);",4000);
    <% end %>
<% end %>